{
  "name": "postman-mcp-server",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server for Postman API integration, providing tools for workspace, collection, request, environment, and folder management",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "postman-mcp-server": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "postman",
    "postman-mcp",
    "postman-mcp-server",
    "Automated-collection-generator",
    "api",
    "server",
    "tools",
    "workspace",
    "collection",
    "environment",
    "ai",
    "artificial-intelligence",
    "must-have-mcp-tool",
    "claude",
    "cline",
    "cursor",
    "assistant",
    "automation",
    "rest",
    "rest-api",
    "http",
    "testing",
    "api-testing",
    "integration",
    "workflow",
    "development",
    "devtools",
    "productivity",
    "cli",
    "typescript",
    "nodejs",
    "npm",
    "global",
    "sdk",
    "client",
    "management",
    "requests",
    "endpoints",
    "microservices",
    "backend",
    "frontend",
    "fullstack"
  ],
  "author": "ankit-roy-0602",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ankit-roy-0602/postman-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/ankit-roy-0602/postman-mcp-server/issues"
  },
  "homepage": "https://github.com/ankit-roy-0602/postman-mcp-server#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "build/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "axios": "^1.7.9",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "es-define-property": "npm:@socketregistry/es-define-property@^1",
    "es-set-tostringtag": "npm:@socketregistry/es-set-tostringtag@^1",
    "function-bind": "npm:@socketregistry/function-bind@^1",
    "gopd": "npm:@socketregistry/gopd@^1",
    "has-symbols": "npm:@socketregistry/has-symbols@^1",
    "has-tostringtag": "npm:@socketregistry/has-tostringtag@^1",
